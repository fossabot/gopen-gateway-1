            "every": {
              "$ref": "#/definitions/duration"
            }
          },
          "required": [
            "capacity"
          ]
        }
      },
      "additionalProperties": false
    },
    "security-cors": {
      "type": "object",
      "properties": {
        "allow-origins": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "allow-methods": {
          "type": "array",
