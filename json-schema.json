      },
      "allOf": [
        {
          "if": {
            "properties": {
              "action": {
                "const": "DEL"
              }
            }
          },
          "then": {
            "required": [
              "context",
              "action",
              "key"
            ]
          }
        },
        {
          "if": {
            "properties": {
