        },
        "body": {
          "$ref": "#/definitions/body-modifier-array"
        }
      },
      "additionalProperties": false
    },
    "header-modifier": {
      "type": "object",
      "properties": {
        "@comment": {
          "type": "string"
        },
        "context": {
          "type": "string",
          "enum": [
            "REQUEST",
            "RESPONSE"
          ]
        },
        "scope": {
          "type": "string",
          "enum": [
            "REQUEST",
            "RESPONSE"
          ]
        },
        "action": {
          "type": "string",
          "enum": [
            "ADD",
            "APD",
            "SET",
            "RPL",
            "REN",
            "DEL"
          ]
        },
        "key": {
          "type": "string"
        },
        "value": {
          "type": "string"
        },
        "propagate": {
          "type": "boolean"
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "action": {
                "const": "DEL"
              }
            }
          },
          "then": {
            "required": [
              "context",
              "action",
              "key"
            ]
          },
          "else": {
            "required": [
              "context",
              "action",
              "key",
              "value"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "scope": {
                "const": "REQUEST"
              }
            }
          },
          "else": {
            "not": {
              "required": [
                "propagate"
              ]
            }
          }
        }
      ]
    },
    "header-modifier-array": {
      "type": "array",
