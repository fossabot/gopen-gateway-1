        "omit-header": {
          "type": "boolean"
        },
        "omit-body": {
          "type": "boolean"
        },
        "group": {
          "type": "string",
          "minLength": 1
        },
        "header-filter": {
          "$ref": "#/definitions/header-filter"
        },
        "body-filter": {
          "$ref": "#/definitions/body-filter"
        }
      },
      "additionalProperties": false
    },
    "backend": {
      "type": "object",
      "properties": {
        "@comment": {
          "type": "string"
        },
        "hosts": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/url"
          }
        },
        "path": {
          "$ref": "#/definitions/path"
        },
        "method": {
          "$ref": "#/definitions/http-method"
        },
        "request": {
          "$ref": "#/definitions/backend-request"
        },
        "response": {
          "$ref": "#/definitions/backend-response"
        },
        "modifiers": {
          "$ref": "#/definitions/backend-modifiers"
        }
      },
      "required": [
        "hosts",
        "path",
        "method"
      ],
      "additionalProperties": false
    },
    "backend-modifiers": {
      "type": "object",
      "properties": {
        "@comment": {
          "type": "string"
        },
        "status-code": {
          "type": "integer",
          "minimum": 100,
