            "address": {
              "$ref": "#/definitions/url"
            },
            "password": {
              "type": "string"
            }
          },
          "required": [
            "address"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "redis"
      ],
      "additionalProperties": false
    },
    "cache": {
      "type": "object",
      "properties": {
        "duration": {
